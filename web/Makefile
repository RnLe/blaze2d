# Makefile for cleaning up the repo and set it to a fresh-clone state
# Run in root of the repo with sudo:

# sudo make clean

# Run 'pnpm i' to install dependencies again
# Run 'pnpm build' to build the project again

# Folders to blow away
CLEAN_DIRS := \
  node_modules \
  .next \
  out \
  dist \
  public/wasm

# Files to blow away
CLEAN_FILES := \
  *.tsbuildinfo

.PHONY: clean
clean:
	@echo "ðŸ§¹ Cleaning all build artifacts and installsâ€¦"
	@for d in $(CLEAN_DIRS); do \
	  sudo rm -rf $$d; \
	done
	@for f in $(CLEAN_FILES); do \
	  sudo rm -f $$f; \
	done
	@echo "âœ…  Done. Repo is now back to a fresh-clone state."

# Serve the website's out/ folder on 3001
.PHONY: serve
serve:
	pnpm run serve:out

# Completely clean the repo, install dependencies, build, and serve
.PHONY: dev
dev: clean
	pnpm i && pnpm run build && pnpm run serve:out

# WASM Build Pipeline
# ===================

# Build WASM module and copy to website
.PHONY: build-wasm
build-wasm:
	@echo "ðŸ¦€ Building WASM module..."
	cd ../rust-wasm && wasm-pack build --target web --out-dir pkg
	@echo "ðŸ“¦ Copying WASM files to website..."
	mkdir -p public/wasm
	cp ../rust-wasm/pkg/moire_lattice_wasm.js public/wasm/moire_lattice_wasm.js
	cp ../rust-wasm/pkg/moire_lattice_wasm.d.ts public/wasm/moire_lattice_wasm.d.ts
	cp ../rust-wasm/pkg/moire_lattice_wasm_bg.wasm public/wasm/moire_lattice_wasm_bg.wasm
	cp ../rust-wasm/pkg/moire_lattice_wasm_bg.wasm.d.ts public/wasm/moire_lattice_wasm_bg.wasm.d.ts
	cp ../rust-wasm/pkg/package.json public/wasm/package.json
	@echo "ðŸ§¹ Cleaning up WASM build artifacts..."
	cd ../rust-wasm && rm -rf target
	@echo "âœ… WASM module built and copied successfully!"

# Build WASM and install dependencies
.PHONY: build-wasm-dev
build-wasm-dev: build-wasm
	@echo "ðŸ“¦ Installing dependencies..."
	pnpm install
	@echo "âœ… WASM build and dependencies ready for development!"

# Clean WASM artifacts from website
.PHONY: clean-wasm
clean-wasm:
	@echo "ðŸ§¹ Cleaning WASM artifacts from website..."
	rm -rf public/wasm/*
	@echo "âœ… WASM artifacts cleaned!"

# Full development build including WASM
.PHONY: dev-with-wasm
dev-with-wasm: clean build-wasm-dev
	pnpm run build && pnpm run serve:out

# Python Build Pipeline
# ======================

# Build Python bindings using maturin
.PHONY: build-python
build-python:
	@echo "ðŸ Building Python bindings..."
	cd ../rust-python && maturin develop --release
	@echo "âœ… Python bindings built successfully!"

# Build Python bindings for development (debug mode)
.PHONY: build-python-dev
build-python-dev:
	@echo "ðŸ Building Python bindings (debug mode)..."
	cd ../rust-python && maturin develop
	@echo "âœ… Python bindings built successfully in debug mode!"

# Install Python dependencies and build bindings
.PHONY: python
python: build-python
	@echo "ðŸ Python bindings ready!"

# Clean Python build artifacts
.PHONY: clean-python
clean-python:
	@echo "ðŸ§¹ Cleaning Python build artifacts..."
	cd ../rust-python && cargo clean
	cd ../rust-python && rm -rf target/
	cd ../rust-python && find . -name "*.so" -delete
	cd ../rust-python && find . -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
	cd ../rust-python && find . -name "*.pyc" -delete
	@echo "âœ… Python build artifacts cleaned!"
